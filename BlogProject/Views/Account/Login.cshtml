@model AccountUserVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AnonymousLayout.cshtml";
}

<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Oturum Aç</p>


        @if (ViewData["Mesaj"] != null)
        {
            <div class="alert alert-info">
                @ViewData["Mesaj"]
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post">

            <span asp-validation-for="@Model.Email"></span>
            <div class="input-group mb-3">
                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="@Model.Password"></span>
            <div class="input-group mb-3">
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="remember">
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <div class="social-auth-links text-center mb-3">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
            </a>
        </div>
        <!-- /.social-auth-links -->

        <p class="mb-1">
            <a href="forgot-password.html">I forgot my password</a>
        </p>
        <p class="mb-0">
            <a asp-action="Register" asp-controller="Account" class="text-center">Üye Ol</a>
        </p>
    </div>
    <!-- /.login-card-body -->
</div>

@section ValidationScripts{
    @Html.Partial("_ValidationScriptsPartial")
}